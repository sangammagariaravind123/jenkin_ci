pipeline {
  agent any
  stages {
    stage('Checkout') { steps { checkout scm } }
    stage('Build') {
      steps {
        bat """
        if exist out rmdir /s /q out
        mkdir out
        javac src/*.java -d out
        """
      }
    }
    stage('Run') {
      steps {
        bat """
        java src.Hey
        echo Build_OK > artifact.txt
        """
      }
    }
  }
  post {
    always {
      archiveArtifacts artifacts: 'artifact.txt, out/**'
    }
  }
}
